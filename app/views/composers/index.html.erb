<div class="page-body composers-page">
  <div class="page-box">
    <h1>Composers</h1>
    <% groups = @composers.group_by { |c| c.first_letter_of_last_name }%>

    <div class="page-content composers-content">
      <div class="alphabet">
      <% groups.each_key do |letter| %>
        <span class="letters"><a href="#<%= letter.downcase %>"><%= letter %></a></span>
      <% end %>
      </div><!--end alphabet-->

      <div class="composer-list">
        <% columns = composer_columns(groups) %>
        <%= render partial: "composer_column", locals: {group: columns[0]} %>
        <%= render partial: "composer_column", locals: {group: columns[1]} %>
      </div>
    </div>
  </div>
</div>
