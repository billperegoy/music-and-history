<div class="page-body composers-page">
  <div class="page-box">
    <h1>Composers</h1>
    <% groups = @composers.group_by { |c| c.last_name[0,1] }%>

    <div class="page-content composers-content">
      <% groups.each_key do |letter| %>
        <span class="letters"><a href="#<%= letter.downcase %>"><%= letter %></a></span>
      <% end %>

      <div class="composer-list">
        <% column1 = composer_column(groups, ('A'..'K')) %>
        <% column2 = composer_column(groups, ('L'..'Z')) %>
        <%= render partial: "composer_column", locals: {group: column1} %>
        <%= render partial: "composer_column", locals: {group: column2} %>
      </div>
    </div>
    </div>
</div>
