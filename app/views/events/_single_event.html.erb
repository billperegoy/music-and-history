<div class="single-event">
  <div class="event-icon">
    <%= image_tag(event_icon_for_category(event.category.name)) %>
  </div>
  <div class="event-body">
    <span class="date-in-event"><%= single_event_date(event.date, type) %></span>
    <span><%= event.description.html_safe %></span>
    <span class="event-picture"><%= image_tag(event.image) %></span>
    <span class="event-picture-caption"><%= event.caption %></span>
  </div>
</div>
