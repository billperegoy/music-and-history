<div class="page-body links-page">
  <div class="page-box">
    <h1>Links</h1>
    <div class="page-content links-content body-text">
      <div class="column-1">
      <% @link_categories.each do |category| %>
        <h3><%= category.name %></h3>
        <% category.hyperlinks.each do |link| %>
          <p> <a target="_blank" href="<%= link.url %>"><%= link.name %></a></p>
        <% end %>
      <% end %>
      </div>
      
      <div class="column-2">
      <% @link_categories.each do |category| %>
